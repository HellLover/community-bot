{
    "compilerOptions": {
      "target": "ESNEXT",
      "module": "CommonJS",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "strict": true,
      "esModuleInterop": true,
      "strictPropertyInitialization": false,
      "skipLibCheck": false,
      "inlineSourceMap": true,
      "noImplicitAny": false,
      "allowJs": true,
      "checkJs": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./build",
      "paths": {
        "#assets/*": ["./assets/*"],
        "#db/*": ["./src/database/*"],
        "#utils/*": ["./src/utils/*"]
      }
    }
}